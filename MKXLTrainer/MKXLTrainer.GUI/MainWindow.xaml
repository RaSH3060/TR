<Window x:Class="MKXLTrainer.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MKXLTrainer.GUI"
        mc:Ignorable="d"
        Title="MKXL Trainer" Height="600" Width="800" ResizeMode="CanMinimize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Game Path Selection -->
        <GroupBox Grid.Row="0" Header="Game Configuration" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="TxtGamePath" Width="300" Margin="5" IsReadOnly="True"/>
                <Button Content="Browse MK10.exe" Width="120" Margin="5" Click="BtnBrowseGame_Click"/>
                <Button Content="Deploy DLL" Width="100" Margin="5" Click="BtnDeployDll_Click"/>
            </StackPanel>
        </GroupBox>
        
        <!-- Memory Address Configuration -->
        <GroupBox Grid.Row="1" Header="Memory Configuration" Margin="0,0,0,10">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal" Margin="5">
                    <TextBlock Text="Base Address:" Width="100" VerticalAlignment="Center"/>
                    <TextBox x:Name="TxtBaseAddress" Width="150" Margin="5" Text="033C8A98"/>
                    <TextBlock Text="Offsets:" Width="60" VerticalAlignment="Center"/>
                    <TextBox x:Name="TxtOffsets" Width="200" Margin="5" Text="8, 130, 108, 78, 90, 120, F20"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
        
        <!-- Timing Controls -->
        <GroupBox Grid.Row="2" Header="Timing Settings" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <StackPanel Margin="10,5">
                    <TextBlock Text="Block Threshold (ms):" Margin="0,0,0,5"/>
                    <Slider x:Name="SldBlockThreshold" Minimum="0" Maximum="500" Value="260" Width="150" 
                            TickFrequency="10" IsSnapToTickEnabled="True" ValueChanged="SldBlockThreshold_ValueChanged"/>
                    <TextBlock x:Name="TxtBlockThresholdValue" Text="{Binding ElementName=SldBlockThreshold, Path=Value}" 
                               HorizontalAlignment="Center" FontWeight="Bold"/>
                </StackPanel>
                
                <StackPanel Margin="10,5">
                    <TextBlock Text="Macro Threshold (ms):" Margin="0,0,0,5"/>
                    <Slider x:Name="SldMacroThreshold" Minimum="0" Maximum="500" Value="280" Width="150" 
                            TickFrequency="10" IsSnapToTickEnabled="True" ValueChanged="SldMacroThreshold_ValueChanged"/>
                    <TextBlock x:Name="TxtMacroThresholdValue" Text="{Binding ElementName=SldMacroThreshold, Path=Value}" 
                               HorizontalAlignment="Center" FontWeight="Bold"/>
                </StackPanel>
                
                <StackPanel Margin="10,5">
                    <TextBlock Text="Current Frame:" Margin="0,0,0,5"/>
                    <TextBlock x:Name="TxtCurrentFrame" Text="0" Width="150" Background="LightGray" Padding="5" 
                               HorizontalAlignment="Left" FontWeight="Bold"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="3" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Key Blocking Section -->
            <GroupBox Grid.Column="0" Header="Key Blocking" Margin="0,0,5,0">
                <StackPanel>
                    <CheckBox x:Name="ChkEnableBlocking" Content="Enable Input Blocking" Margin="5" 
                              Checked="ChkEnableBlocking_Checked" Unchecked="ChkEnableBlocking_Unchecked"/>
                    <ListBox x:Name="LstBlockedKeys" Height="150" Margin="5"/>
                    <Button Content="Add Blocked Key" Width="120" Margin="5" HorizontalAlignment="Left" Click="BtnAddBlockedKey_Click"/>
                </StackPanel>
            </GroupBox>
            
            <!-- Macro Editor Section -->
            <GroupBox Grid.Column="1" Header="Macro Editor" Margin="5,0,0,0">
                <StackPanel>
                    <TextBlock Text="Macro Steps:" Margin="5,0,0,5"/>
                    <DataGrid x:Name="DgMacroSteps" AutoGenerateColumns="False" Height="120" Margin="5">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Button" Binding="{Binding Button}" Width="*"/>
                            <DataGridTextColumn Header="Duration (ms)" Binding="{Binding DurationMs}" Width="*"/>
                            <DataGridTextColumn Header="Delay After (ms)" Binding="{Binding DelayAfterMs}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <Button Content="Add Step" Width="75" Margin="0,0,5,0" Click="BtnAddMacroStep_Click"/>
                        <Button Content="Remove Step" Width="85" Margin="0,0,5,0" Click="BtnRemoveMacroStep_Click"/>
                        <Button Content="Run Macro" Width="75" Margin="0,0,5,0" Click="BtnRunMacro_Click"/>
                        <Button Content="Stop Macro" Width="75" Click="BtnStopMacro_Click"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </Grid>
        
        <!-- Control Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save Preset" Width="100" Margin="5" Click="BtnSavePreset_Click"/>
            <Button Content="Load Preset" Width="100" Margin="5" Click="BtnLoadPreset_Click"/>
            <Button Content="Start Monitoring" Width="120" Margin="5" Click="BtnStartMonitoring_Click"/>
            <Button Content="Stop Monitoring" Width="120" Margin="5" Click="BtnStopMonitoring_Click"/>
        </StackPanel>
    </Grid>
</Window>
